<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sozeris.Pages.CartPage"
             x:Name="PageRef"
             BackgroundColor="#FAF5EF">

    <Grid RowDefinitions="*,Auto" Padding="24">

        <!-- Основной контент с заголовком и товарами -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="20">

                <!-- Заголовок -->
                <Label Text="Ваша корзина"
                       FontSize="32"
                       FontAttributes="Bold"
                       TextColor="#2C1B12"
                       HorizontalOptions="Center"
                       Margin="0,0,0,10"/>

                <!-- Пустая корзина -->
                <Label Text="Корзина пуста"
                       FontSize="18"
                       HorizontalOptions="Center"
                       TextColor="#888"
                       IsVisible="{Binding HasItems, Converter={StaticResource InverseBooleanConverter}}" />

                <!-- Товары в корзине -->
                <Frame BackgroundColor="White"
                       CornerRadius="20"
                       Padding="16"
                       HasShadow="True"
                       IsVisible="{Binding HasItems}">
                    <VerticalStackLayout Spacing="20">
                        <CollectionView ItemsSource="{Binding CartItems}" SelectionMode="None">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,0,0,16"
                                          ColumnDefinitions="60,*,Auto" 
                                          ColumnSpacing="15">

                                        <!-- Фото -->
                                        <Frame CornerRadius="16"
                                               Padding="0"
                                               HasShadow="False"
                                               IsClippedToBounds="True"
                                               BackgroundColor="#F4F4F4"
                                               WidthRequest="60"
                                               HeightRequest="60"
                                               VerticalOptions="Center"
                                               HorizontalOptions="Center">
                                            <Image Source="{Binding Product.Image}"
                                                   Aspect="AspectFill"
                                                   WidthRequest="60"
                                                   HeightRequest="60"
                                                   VerticalOptions="Fill"
                                                   HorizontalOptions="Fill"/>
                                        </Frame>

                                        <!-- Название и цена -->
                                        <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                                            <Label Text="{Binding Product.Name}"
                                                   FontSize="18"
                                                   FontAttributes="Bold"
                                                   TextColor="#1B1B1B" />
            
                                            <!-- Кол-во × цена -->
                                            <Label FontSize="14">
                                                <Label.FormattedText>
                                                    <FormattedString>
                                                        <Span Text="{Binding Quantity}" TextColor="#777"/>
                                                        <Span Text=" × " TextColor="#777"/>
                                                        <Span Text="{Binding Product.Price}" TextColor="#777"/>
                                                        <Span Text=" ₽" TextColor="#777"/>
                                                    </FormattedString>
                                                </Label.FormattedText>
                                            </Label>
                                            
                                            <!-- Итоговая цена -->
                                            <Label Text="{Binding TotalPrice, StringFormat='{0} ₽'}"
                                                   FontSize="16"
                                                   TextColor="#1B1B1B"
                                                   FontAttributes="Bold"
                                                   Margin="0,4,0,0" />
                                        </VerticalStackLayout>
                                        
                                        <!-- Кнопка удаления -->
                                        <Frame Grid.Column="2"
                                               WidthRequest="32"
                                               HeightRequest="32"
                                               Padding="4"
                                               CornerRadius="16"
                                               BackgroundColor="#FFF0F0"
                                               VerticalOptions="Center"
                                               HorizontalOptions="End">

                                            <ImageButton Source="trash_icon.png"
                                                         BackgroundColor="Transparent"
                                                         WidthRequest="24"
                                                         HeightRequest="24"
                                                         Aspect="AspectFit"
                                                         Padding="0"
                                                         HorizontalOptions="Center"
                                                         VerticalOptions="Center"
                                                         Command="{Binding BindingContext.RemoveCommand, Source={x:Reference PageRef}}"
                                                         CommandParameter="{Binding}" />
                                        </Frame>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <!-- Разделитель -->
                        <BoxView HeightRequest="1" Color="#DDD" />

                        <!-- Итого -->
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Text="Итого"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#1B1B1B" />
                            <Label Text="{Binding CartTotalPrice, StringFormat='{0} ₽'}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="#1B1B1B"
                                   HorizontalOptions="End"
                                   Grid.Column="1"/>
                        </Grid>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Кнопка снизу -->
        <Button Text="Оформить подписку"
                Grid.Row="1"
                FontSize="18"
                FontAttributes="Bold"
                CornerRadius="12"
                BackgroundColor="#D67A33"
                TextColor="White"
                HeightRequest="56"
                Command="{Binding SubscribeCommand}"
                IsVisible="{Binding HasItems}" />
    </Grid>
</ContentPage>