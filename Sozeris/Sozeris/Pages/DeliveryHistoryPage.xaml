<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sozeris.Pages.DeliveryHistoryPage"
             BackgroundColor="#F0EFEA">

    <ContentPage.Content>
        <Grid Padding="20">
            <VerticalStackLayout Spacing="20">
                <Label Text="История доставок"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="#2C1B12"
                       HorizontalOptions="Center" />

                <CollectionView ItemsSource="{Binding Deliveries}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BackgroundColor="White"
                                   CornerRadius="12"
                                   Padding="16"
                                   Margin="0,0,0,12"
                                   HasShadow="True">
                                <VerticalStackLayout Spacing="6">
                                    <Label Text="{Binding SubscriptionId, StringFormat='Подписка №{0}'}"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="#333" />
                                    <Label Text="{Binding DeliveryDate, StringFormat='Дата доставки: {0:dd.MM.yyyy}'}"
                                           FontSize="14"
                                           TextColor="#555" />
                                </VerticalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>